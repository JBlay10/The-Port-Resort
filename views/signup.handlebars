<div class="p-5 text-center bg-image hero-image">
    <div class="mask">
        <div class="d-flex justify-content-center align-items-center h-100">
            <div class="text-white">
                <div class="sign-up">
                    <form class="container signup-form d-flex justify-content-center align-items-center flex-column">
                        <h2 class="title-sign">Sign up</h2>
                        <div class="row col-10 name">
                            <label for="name-signup">Name</label>
                            <input type="text" id="name-signup" />
                        </div>

                        <div class="row col-10 github">
                            <label for="github-signup">Github Username</label>
                            <input type="text" id="github-signup" />
                        </div>

                        <div class="row col-10 email">
                            <label for="email-signup">Email</label>
                            <input type="text" id="email-signup" />
                        </div>

                        <div class="row col-10 password">
                            <label for="password-signup">Password</label>
                            <input type="password" id="password-signup" />
                        </div>

                        <div class="signup-action">
                            <button type="submit" class="btn signup-btn" id="signup-data">Sign-Up</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

