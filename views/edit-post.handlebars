<div class="dashboard">
    <a href="/dashboard" class="dashboard-back">&larr; Back to Dashboard</a>
    <form class="container edit-post">
        <h2 class="title-edit text-center text-white">Edit Profile</h2>

        <div class="row port-name">
            <label class="text-white" for="name">Full Name:</label>
            <input type="text" id="name" class="name" name="name" value='{{post.name}}'>
        </div>

        <div class="row port-job_title">
            <label class="text-white" for="job_title">Job Title:</label>
            <input type="text" id="job_title" class="job_title" name="job_title" value='{{post.job_title}}'>
        </div>

        <div class="row port-about">
            <label class="text-white" for="about">About:</label>
            <input type="text" id="about" class="about" name="about" value='{{post.about}}'>
        </div>
        
        <div class="row port-phone">
            <label class="text-white" for="phone">Contact Phone:</label>
            <input type="text" id="phone" class="phone" name="phone" value='{{post.phone}}'>
        </div>
        
        <div class="row port-email">
            <label class="text-white" for="email">Contact Email:</label>
            <input type="text" id="email" class="email" name="email" value='{{post.email}}'>
        </div>
        
        <div class="row port-github">
            <label class="text-white" for="github">Github:</label>
            <input type="text" id="github" class="github" name="github" value='{{post.github}}'>
        </div>
        
        <div class="row port-linkedin">
            <label class="text-white" for="linkedin">LinkedIn:</label>
            <input type="text" id="linkedin" class="linkedin" name="linkedin" value='{{post.linkedin}}'>
        </div>

        <div class="row port-role">
            <label class="text-white" for="role">Role:</label>
            <input type="text" id="role" class="role" name="role" value='{{post.role}}'>
        </div>

        <div class="row port-company">
            <label class="text-white" for="company">Company:</label>
            <input type="text" id="company" class="company" name="company" value='{{post.company}}'>
        </div>

        <div class="row port-job_starting">
            <label class="text-white" for="job_starting">Start Date:</label>
            <input type="text" id="job_starting" class="job_starting" name="job_starting" value='{{post.job_starting}}'>
